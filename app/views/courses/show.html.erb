<div class="user-devise">
  <div></div>
  <div></div>
  <div></div>
  <div></div>
  <div class="user-form">
    <h3><%= @course.title %></h3>
    <h5>
      <span class="badge badge-pill badge-default">
        <%= number_to_currency @course.cost %>          
      </span>
    </h5>    
    <% if current_user && current_user == @course.user %>
      <%= link_to 'Administer', instructor_course_path(@course), class: 'enter-button' %>
    <% end %>
    <p><%= @course.description %></p>
    <ol>
      <% @course.sections.each do |section| %>
        <li>
          <div>
            <h5 class="float-left"><%= section.title %></h5>
            <br/>
            <ul>
              <% section.lessons.each do |lesson| %>
                <li>
                  <div style="padding: 1%;">
                    <%= link_to lesson_path(lesson) do %>
                      <h5><%= lesson.title %></h5>
                      <p><%= lesson.subtitle %></p>
                    <% end %>
                  </div>
                </li>          
              <% end %>
            </ul>
            <hr/>
          </div>
        </li>          
      <% end %>
    </ol>
  </div>
  <div></div>
  <div></div>
  <div></div>
  <div></div>
</div>