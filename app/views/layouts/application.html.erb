<!DOCTYPE html>
<html>
  <head>
    <title>Videoedify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <script>
      $(function() {
        $( ".fa" ).tooltip({
          position: { my: "center top+10", at: "center bottom" }
        });
      });
    </script>
  </head>
  <body>
    <div class="app-wrapper">

      <header class="app-header">

        <div class="gradient">
          <%= render file: "app/assets/images/rgb.svg" %>
        </div>

        <div class="logo-green">
          <a href="/#">
            <%= render file: "app/assets/images/logo-green.svg" %>
          </a>
        </div>

        <div class="courses">
          <%= link_to 'View All Courses', courses_path %>
        </div>

        <div class="user-sign">
          <ul class="item-list">
            <% if user_signed_in? %>
              <li class="item active">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li class="item">
                <%= link_to 'Sign In', new_user_session_path %>
              </li>
              <li class="item">
                <%= link_to 'Sign Up', new_user_registration_path %>
              </li>
            <% end %>
          </ul> 
        </div>

        <div class="hamburger">
          <div class="hamburger-icon">
            <%= render file: "app/assets/images/hamburger-icon.svg" %>
            <div class="header-links">
              <ul class="item-list">
                <li class="item active">
                  <%= link_to 'Teach a Course', new_instructor_course_path %>
                </li>
                <li class="item">
                  <%= link_to 'Dashboard', dashboard_path %>
                </li>
              </ul>
            </div>
          </div>
        </div>

      </header>

      <div class="app-content">
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>

      <footer class="app-footer">
        <div class="bottom-links">
          <div class="more">
            <a>Social</a>
          </div>
          <div class="gradient-footer">
            <%= render file: "app/assets/images/rgb.svg" %>
          </div>
          <ul>                 
            <li>
              <%= link_to 'https://github.com/do-wuh' do %>
                <i class="fa fa-github-alt fa-2x" title="GitHub"></i>
              <% end %>
            </li>
            <li>
              <i class="fa fa-facebook fa-2x"title="Facebook"></i>
            </li>
            <li>
              <i class="fa fa-twitter fa-2x"title="Twitter"></i>
            </li>
            <li>
              <i class="fa fa-pinterest-p fa-2x" title="Pinterest"></i>
            </li>
            <li>
              <i class="fa fa-user-secret fa-2x" title="Secret"></i>
            </li>
            <li>
              <i class="fa fa-snapchat-ghost fa-2x" title="Snapchat"></i>
            </li>
            <li>
              <i class="fa fa-slack fa-2x" title="Slack"></i>
            </li>
          </ul> 
        </div>
      </footer>
    
    </div>

    <!-- #userForm modal -->
    <div class="modal fade hide" id="userForm" tabindex="-1" role="dialog" aria-labelledby="userFormLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="user-devise">
            <div class="tab-content">
              <div class="tab-pane fade active show" id="signinForm">
                <%= render template: "devise/sessions/new" %>
              </div>
              <div class="tab-pane fade" id="signupForm">
                <%= render template: "devise/registrations/new" %>
              </div>
              <div class="tab-pane fade" id="forgotForm">
                <%= render template: "devise/passwords/new" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>    

  </body>
</html>