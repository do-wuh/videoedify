<!DOCTYPE html>
<html>
  <head>
    <title>Videoedify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <script>
      $(function() {
        $('.signupModal').click(function(){
          $("#userForm").modal('show');
          $("#signinForm").tab('hide');
          $("#signupForm").tab('show');          
          $("#forgotForm").tab('hide');
        });
      });
    </script>
  </head>
  <body>
    <div class="app-wrapper">

      <header class="app-header">

        <div class="gradient">
          <%= render file: "app/assets/images/rgb.svg" %>       
        </div>

        <div class="logo-green">                            
          <a href="/#">
            <%= render file: "app/assets/images/logo-green.svg" %>
          </a>          
        </div>
        
        <%= link_to courses_path do %>
          <div class="courses">
            View All Courses
          </div>
        <% end %>

        <div class="hamburger">
          <div class="hamburger-icon">
            <%= render file: "app/assets/images/hamburger-icon.svg" %>          
            <div class="header-links">
              <ul class="item-list">
                <% if user_signed_in? %>
                  <li class="item active">
                    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
                  </li>
                <% else %>
                  <li class="item">
                    <%= link_to 'Sign In', "#userForm", 'data-toggle' => 'modal', class: 'edit-color' %>
                  </li>
                  <li class="item">                  
                    <%= link_to 'Sign Up', '#signupForm', class: 'edit-color signupModal' %>
                  </li>
                <% end %>
              </ul>          
            </div>
          </div>
        </div>

        <div class="search float-right">
          <form>
            <input class="search-box" type="text" placeholder="search">
            <button class="search-icon" type="submit">Search</button>
          </form>
        </div>

      </header>

      <div class="app-content">
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div> 

      <footer class="app-footer">
        <div class="bottom-links">
          <div class="more">
            <a>more</a>
          </div>
          <ul>
            <li>
              <a>Social</a>             
            </li>
            <li>
              <a>About</a>
            </li>
            <li>
              <a>Contact</a>
            </li>
            <li>
              <a>Team</a>
            </li>
            <li>
              <a>Careers</a>
            </li>
            <li>
              <a>Teachers</a>
            </li>
            <li>
              <%= link_to 'Dashboard', dashboard_path %>
            </li>
          </ul>
        </div>       
      </footer>
     
    </div>

    <!-- #userForm modal -->
    <div class="modal fade hide" id="userForm" tabindex="-1" role="dialog" aria-labelledby="userFormLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="user-devise">
            <div class="tab-content">
              <div class="tab-pane fade active show" id="signinForm">
                <%= render template: "devise/sessions/new" %>
              </div>
              <div class="tab-pane fade" id="signupForm">
                <%= render template: "devise/registrations/new" %>
              </div>
              <div class="tab-pane fade" id="forgotForm">
                <%= render template: "devise/passwords/new" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>    

  </body>
</html>